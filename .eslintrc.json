{
  "root": true,
  "env": { "es2023": true, "browser": true, "node": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "smart"]
  },
  "ignorePatterns": ["dist/", "build/", "node_modules/"]
}
